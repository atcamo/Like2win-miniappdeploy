{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "permissions": {
    "allow": [
      "Bash(npm run postinstall:*)",
      "Bash(npm run type-check:*)",
      "Bash(npm run lint)",
      "Bash(timeout 300 npm run build)",
      "Bash(git add:*)",
      "Bash(git commit:*)",
      "Bash(git push:*)",
      "Bash(npm run build:*)",
      "Bash(bun run:*)",
      "Bash(npx tsc:*)",
      "Bash(grep:*)",
      "Bash(find:*)",
      "Bash(rm:*)",
      "Bash(timeout 30s npm run build:*)",
      "Bash(timeout 30s npm run lint)",
      "Bash(timeout 45s npm run build)",
      "Bash(curl:*)"
    ],
    "deny": [],
    "defaultMode": "acceptEdits"
  }
}